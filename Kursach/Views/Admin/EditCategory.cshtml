@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Views/Shared/Admin.cshtml";
}
@model Kursach.Models.Category

<form asp-antiforgery="true" asp-action="EditCategory" asp-controller="Admin">
    <div>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Name"></label><br />
            <input type="text" asp-for="Name" value="@ViewBag.Category.Name" class="form-control" />
            <input type="hidden" asp-for="Id" value="@ViewBag.Category.Id" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>

        <div>
            <input type="submit" class="butn" value="Edit" />
        </div>
    </div>
</form>


@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}